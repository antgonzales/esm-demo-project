{
  "name": "esm-demo-project",
  "version": "1.0.0",
  "description": "Demonstration that build tools solve ESM compliance while preserving developer-friendly patterns",
  "type": "module",
  "sideEffects": false,
  "main": "./results/rollup-esm/index.js",
  "exports": {
    ".": {
      "import": "./results/rollup-esm/index.js",
      "types": "./results/rollup-esm/index.d.ts"
    },
    "./webpack": {
      "import": "./results/webpack-esm/index.js",
      "types": "./results/webpack-esm/index.d.ts"
    }
  },
  "scripts": {
    "start": "pnpm run demo",
    "build": "pnpm run build:all",
    "test": "pnpm run test:all",
    "clean": "rm -rf results/*",
    "dev": "pnpm run demo",
    "analyze": "pnpm --filter=esm-demo-treeshaking run analyze",
    
    "build:all": "pnpm run clean && pnpm run build:rollup && pnpm run build:webpack && pnpm run build:typescript",
    "build:rollup": "pnpm --filter=esm-demo-rollup-build run build",
    "build:webpack": "pnpm --filter=esm-demo-webpack-build run build", 
    "build:typescript": "pnpm --filter=esm-demo-typescript-build run build",
    
    "test:all": "pnpm run test:esm && pnpm run test:analysis",
    "test:esm": "pnpm --filter=esm-demo-node-tests test",
    "test:analysis": "pnpm --filter=esm-demo-bundle-analysis test",
    
    "demo": "pnpm run build && pnpm run test && pnpm run analyze && echo '\\nâœ… ESM compliance demonstration complete!'",
    "tree-shaking": "pnpm --filter=esm-demo-treeshaking run analyze"
  },
  "keywords": [
    "esm",
    "modules",
    "build-tools",
    "barrel-files",
    "rollup",
    "webpack",
    "typescript"
  ],
  "devDependencies": {
    "typescript": "^5.3.0",
    "react": "^18.2.0",
    "@types/react": "^18.2.45"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "engines": {
    "node": ">=20.12.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "author": "ESM Demonstration",
  "license": "MIT"
}